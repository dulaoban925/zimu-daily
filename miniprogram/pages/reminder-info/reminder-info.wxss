.info-header {
  font-size: var(--font-size-larger);
  font-weight: bold;
  color: var(--color-primary);
  background-color: #ffffff;
  padding: 10rpx var(--common-padding-margin);
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid var(--color-gray-3);
}

.list-scroll-view {
  /** 处理 iphoneX + 底部安全距离*/
  height: calc(100vh - 146rpx - constant(safe-area-inset-bottom));
  height: calc(100vh - 146rpx - env(safe-area-inset-bottom));
  box-sizing: border-box;
  padding: var(--common-padding-margin);
}
