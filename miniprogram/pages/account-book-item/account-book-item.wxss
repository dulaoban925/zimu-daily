.account-book-item {
  --button-primary-background-color: #d6f8af;
  --button-primary-border-color: #d6f8af;
  --button-primary-color: var(--color-gray-8);
}

.cell {
  padding: var(--common-padding-margin);
  background-color: var(--color-white);
}

.cell:not(:last-child) {
  margin-bottom: var(--common-padding-margin);
}

.label {
  font-size: 32rpx;
  color: var(--color-gray-8);
}

.amount-input {
  font-size: 80rpx;
  font-weight: 600;
  display: flex;
}

.amount-input input {
  height: 80rpx;
  min-height: 80rpx;
  line-height: 80rpx;
  padding: var(--common-padding-margin) 0;
}

.ie-types {
  padding-bottom: var(--common-padding-margin);
  border-bottom: 2rpx solid var(--color-gray-3);
}

.ie-types van-button:not(:last-child) {
  margin-right: var(--common-padding-margin);
}

.item-source {
  padding: var(--common-padding-margin) 0;
  display: flex;
  justify-content: left;
  align-items: center;
  flex-wrap: wrap;
}

.source-label {
  font-size: 24rpx;
}

.active {
  background-color: var(--button-primary-background-color);
  border: 1px solid var(--button-primary-border-color);
  color: var(--button-primary-color)
}

.source-content {
  width: 100rpx;
  height: 100rpx;
  padding: 10rpx;
  border-radius: 70rpx;
  text-align: center;
}

.item-comment textarea {
  padding: var(--common-padding-margin) 0;
}

.operation-buttons .van-button--default {
  color: var(--color-primary);
}

.operation-buttons van-button:not(:last-child) {
  margin-right: var(--common-padding-margin);
}

.bottom-buttons {
  width: 100%;
  position: fixed;
  box-sizing: border-box;
  padding: var(--common-padding-margin);
  background-color: var(--color-white);
  bottom: 0;
  /** 处理 iphoneX + 底部安全距离*/
  bottom: constant(safe-area-inset-bottom);
  bottom: env(safe-area-inset-bottom);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.text-button {
  font-size: 28rpx;
  color: var(--color-gray-6);
}