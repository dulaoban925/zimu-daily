.account-book {
  box-sizing: border-box;
  padding: var(--common-padding-margin);
}

.account-book-item {
  height: 200rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.account-book-item-cell:not(:first-child) .account-book-item {
  margin-top: var(--common-padding-margin);
}

.item-thumbnail image {
  height: 200rpx; 
  width: 200rpx; 
  margin-top: 5px; /** 图片问题，下方有留白 */
}

.item-content {
  width: 100%;
  height: 100%;
  padding: var(--common-padding-margin);
  box-sizing: border-box;
}

.item-name {
  width: inherit;
  line-height: 50rpx;
  font-weight: bold;
  font-size: 45rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #f8f8f8;
}

.item-amount {
  display: flex;
  line-height: 50rpx;
  flex-direction: column;
}

.add-button {
  position: fixed;
  right: 0;
  bottom: 200rpx;
}

.ab-name-dialog-content {
  padding: 48rpx;
}