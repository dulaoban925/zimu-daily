<!-- 时间选择弹出层 -->
<van-popup
  show="{{show}}"
  z-index="{{zIndex}}"
  overlay="{{overlay}}"
  position="{{position}}"
  round="{{round}}"
  custom-style="{{popupCustomStyle}}"
  overlay-style="{{popupOverlayStyle}}"
  close-on-click-overlay="{{closeOnClickOverlay}}"
  bind:close="onClose">
  <van-datetime-picker
    type="{{type}}"
    value="{{ value }}"
    bind:confirm="onConfirm"
    bind:cancel="onCancel"
  />
</van-popup>